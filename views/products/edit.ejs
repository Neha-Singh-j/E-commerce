<%-include('../partials/header')%>
<%-include('../partials/navbar')%>
<%-include('../partials/flash')%>

<div class="container py-5" style="margin-top: 80px;">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card border-0 shadow" style="border-radius: 15px; overflow: hidden;">
                <div class="card-header py-3" style="background: linear-gradient(to right, #6a11cb 0%, #fc4a1a 100%);">
                    <h3 class="text-white mb-0 text-center">Edit Product</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/products/<%=foundProduct._id%>?_method=PATCH" method="POST" class="needs-validation" novalidate>
                        <div class="mb-4">
                            <label for="naam" class="form-label fw-bold" style="color: #6a11cb;">Name:</label>
                            <input type="text" class="form-control py-2" name="name" id="naam" placeholder="Name of Product" value="<%=foundProduct.name%>" required style="border-color: #d1d1d1;">
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback" style="color: #fc4a1a;">
                                Please provide a valid product name.
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label for="imge" class="form-label fw-bold" style="color: #6a11cb;">Image URL:</label>
                            <input type="text" class="form-control py-2" name="img" id="imge" placeholder="Image URL of Product" value="<%=foundProduct.img%>" required style="border-color: #d1d1d1;">
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback" style="color: #fc4a1a;">
                                Please provide a valid image URL.
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label for="paisa" class="form-label fw-bold" style="color: #6a11cb;">Price:</label>
                            <div class="input-group">
                                <span class="input-group-text py-2" style="background-color: #f3e5ff; color: #6a11cb; font-weight: 600;">Rs.</span>
                                <input class="form-control py-2" type="number" name="price" id="paisa" placeholder="Price of Product" value="<%=foundProduct.price%>" required style="border-color: #d1d1d1;">
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback" style="color: #fc4a1a;">
                                    Please provide a valid price.
                                </div>
                            </div>
                        </div>
                    
                        <div class="mb-4">
                            <label for="des" class="form-label fw-bold" style="color: #6a11cb;">Description:</label>
                            <textarea class="form-control py-2" name="desc" id="des" rows="5" placeholder="Description of Product" required style="border-color: #d1d1d1;"><%=foundProduct.desc%></textarea>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback" style="color: #fc4a1a;">
                                Please provide a valid description.
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a href="/products/<%=foundProduct._id%>" class="btn btn-outline-secondary me-md-2 px-4 py-2">Cancel</a>
                            <button type="submit" class="btn px-4 py-2 fw-bold" style="background: linear-gradient(to right, #6a11cb, #fc4a1a); color: white; border: none;">
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%-include('../partials/footer')%>
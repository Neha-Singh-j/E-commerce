<footer
  class="pt-5 pb-4"
  style="background: linear-gradient(to right, #4a148c, #880e4f)"
>
  <div class="container">
    <div class="row">
      <!-- Brand Info -->
      <div class="col-lg-4 mb-4">
        <h3 class="gradient-text mb-3 fw-bold">Shopiko</h3>
        <p class="gradient-text-light">
          Your vibrant marketplace for unique finds
        </p>
      </div>

      <!-- Company Links -->
      <div class="col-md-4 col-lg-2 mb-4">
        <h5 class="text-uppercase mb-3 gradient-text fw-bold">Company</h5>
        <ul class="list-unstyled">
          <li class="mb-2">
            <a href="/about" class="gradient-link text-decoration-none"
              >About Us</a
            >
          </li>
          <li class="mb-2">
            <a href="/feedback" class="gradient-link text-decoration-none"
              >Feedback</a
            >
          </li>
          <li>
            <a href="/events" class="gradient-link text-decoration-none"
              >Events</a
            >
          </li>
        </ul>
      </div>

      <!-- Support Links -->
      <div class="col-md-4 col-lg-2 mb-4">
        <h5 class="text-uppercase mb-3 gradient-text fw-bold">Support</h5>
        <ul class="list-unstyled">
          <li class="mb-2">
            <a href="/account" class="gradient-link text-decoration-none"
              >Account</a
            >
          </li>
          <li class="mb-2">
            <a href="/faq" class="gradient-link text-decoration-none">FAQ</a>
          </li>
          <li>
            <a href="/contact" class="gradient-link text-decoration-none"
              >Contact Us</a
            >
          </li>
        </ul>
      </div>

      <!-- Contact Info -->
      <div class="col-md-4 col-lg-4 mb-4">
        <h5 class="text-uppercase mb-3 gradient-text fw-bold">Contact Info</h5>
        <address class="gradient-text-light mb-0">
          <p class="mb-1">
            <i class="fas fa-map-marker-alt me-2"></i> 123 Market Street
          </p>
          <p class="mb-1">
            <i class="fas fa-phone me-2"></i> +1 (555) 987-6543
          </p>
          <p class="mb-0">
            <i class="fas fa-envelope me-2"></i> support@shopiko.com
          </p>
        </address>
      </div>
    </div>

    <!-- Divider -->
    <hr
      class="my-4"
      style="
        background: linear-gradient(90deg, #ff8a00, #fc4a1a);
        border: none;
        height: 2px;
      "
    />

    <!-- Social Media -->
    <div class="d-flex justify-content-center mb-4">
      <a
        href="https://www.facebook.com"
        target="_blank"
        rel="noopener"
        aria-label="Facebook"
        class="mx-3 fs-4 gradient-link"
      >
        <i class="fab fa-facebook-f"></i>
      </a>
      <a
        href="https://twitter.com"
        target="_blank"
        rel="noopener"
        aria-label="Twitter"
        class="mx-3 fs-4 gradient-link"
      >
        <i class="fab fa-twitter"></i>
      </a>
      <a
        href="https://instagram.com"
        target="_blank"
        rel="noopener"
        aria-label="Instagram"
        class="mx-3 fs-4 gradient-link"
      >
        <i class="fab fa-instagram"></i>
      </a>
      <a
        href="https://pinterest.com"
        target="_blank"
        rel="noopener"
        aria-label="Pinterest"
        class="mx-3 fs-4 gradient-link"
      >
        <i class="fab fa-pinterest"></i>
      </a>
    </div>

    <!-- Copyright -->
    <div class="text-center">
      <p class="gradient-text-light mb-0">
        &copy; <%= new Date().getFullYear() %> Shopiko. All Rights Reserved.
      </p>
    </div>
  </div>
</footer>
